{
	"configurations": [
		{
			"tempDir": "${workspaceFolder}",
			"command": {
				"executable": "_progres"
			},
			"options": {
				"output": {
					"location": "${tempDir}",
					"filename": "results",
					"format": "xml",
					"updateFile": "updates.log"
				},
				"quitOnEnd": true,
				"showErrorMessage": true,
				"throwError": true
			},
			"profiler": {
				"enabled": true,
				"description": "Run via VSCode - ABLUnit Test Runner Extension",
				"filename": "prof.out"
			}
		}
	]
}
