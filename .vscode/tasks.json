// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build-task"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"type": "npm",
			"script": "watch-webpack",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build-task"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "run unit tests in docker",
			"type": "shell",
			"command": "docker/run_tests.sh",
			"problemMatcher": []
		}
	]
}
