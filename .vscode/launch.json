// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--disable-extensions",
				"${workspaceFolder}/sample"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Test Extension - Select Workspace",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--disable-extensions",
				"${workspaceFolder}/test_projects/${input:workspaceName}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Test Runner",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
			  "--extensionDevelopmentPath=${workspaceFolder}",
			  "--disable-extensions",
			  "--extensionTestsPath=${workspaceFolder}/out/test/suite/index",
			  "${workspaceFolder}/test_projects/proj1"
			],
			"outFiles": ["${workspaceFolder}/out/test/**/*.js"],
			"preLaunchTask": "npm: compile"
		  }
	],
	"inputs": [
		{
			"id": "workspaceName",
			"description": "Enter the name of the workspace to test",
			"type": "pickString",
			"options": [
				"test_projects.code-workspace",
				"proj1",
				"proj2",
				"proj3_debugLines",
				"proj4_tempDir",
				"proj5_propath",
			]
		}
	]
}
