		{
			"name": "Run Extension - pug challenge",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--install-extension=riversidesoftware.openedge-abl-lsp",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"c:/git/pug-challenge"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			]
		},
