// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [

		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--disable-extensions",
				"${workspaceFolder}/sample"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: watch"
		},
		{
			"name": "Test Extension - Select Workspace",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				// "--disable-extensions",
				"${workspaceFolder}/test_projects/${input:workspaceName}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: clean-and-compile"
		},
		{
			"name": "index_unitTests",
			"type": "node-terminal",
			"request": "launch",
			"command": "npm run ./out/test/suite/index_unitTests.js"
		}
	],
	"inputs": [
		{
			"id": "workspaceName",
			"description": "Enter the name of the workspace to test",
			"type": "pickString",
			"options": [
				"test_projects.code-workspace",
				"proj0",
				"proj1",
				"proj2",
				"proj3_debugLines",
				"proj4",
				"proj5_suites",
			]
		}
	]
}
