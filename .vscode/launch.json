// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension - Select Workspace",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--install-extension=riversidesoftware.openedge-abl-lsp",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${input:disable-extensions}",
				"${workspaceFolder}/test_projects/${input:workspaceName}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			// "preLaunchTask": "npm: build"
		},
		{
			"name": "Install Packaged Extension - Select Workspace - Proposed API Enabled",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--install-extension=ablunit-test-runner-0.2.1.vsix",
				"--install-extension=riversidesoftware.openedge-abl-lsp",
				"--extensionDevelopmentPath=${workspaceFolder}/dummy-ext",
				"--enable-proposed-api=kherring.ablunit-test-runner",
				"${workspaceFolder}/test_projects/${input:workspaceName}"
			]
		},
		{
			"name": "Run Extension - pug challenge",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--install-extension=riversidesoftware.openedge-abl-lsp",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"c:/git/pug-challenge"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			]
		}
	],
	"inputs": [
		{
			"id": "workspaceName",
			"description": "Enter the name of the workspace to test",
			"type": "pickString",
			"options": [
				"AtStart",
				"DebugLines",
				"proj0",
				"proj1",
				"proj2",
				"proj3_debugLines",
				"proj4",
				"proj5_suites",
				"proj6_dot_dir",
				"proj7_load_performance",
				"proj8_custom_command",
				"proj9",
				"projA",
				"TestProfileParser",
				"workspace0.code-workspace",
				"workspace1.code-workspace",
			]
		},
		{
			"id": "disable-extensions",
			"description": "Disable all extensions except the one being launched",
			"type": "pickString",
			"default": "Yes",
			"options": [
				{
					"value": "",
					"label": "No"
				},
				{
					"value": "--disable-extensions",
					"label": "Yes"
				}
			]
		}
	]
}
