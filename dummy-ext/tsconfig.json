{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2020",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"rootDir": "src",
		"listEmittedFiles": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
