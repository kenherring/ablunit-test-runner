{
	"ts-node": {
		"transpileOnly": true,
		"require": [ "tsconfig-paths/register" ]
	},
	"compilerOptions": {
		// "module": "NodeNext",
		// "moduleResolution": "NodeNext", // https://www.typescriptlang.org/tsconfig#moduleResolution
		// "target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2020",
		"lib": [
			"es2020",
			"WebWorker"
		],
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": ".",
		// "paths": {
		// 	"*": [ "./src/*" ]
		// },
		"sourceRoot": ".",
		"sourceMap": true,
		// "inlineSourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"listEmittedFiles": true,
		// "traceResolution": true,

		"allowJs": true,
		"checkJs": true,

		// "allowSyntheticDefaultImports": true, // enabled by "esModuleInterop"
		// "allowUnreachableCode": false, // editor warning when undefined
		// "allowUnusedLabels": false, // editor warning when undefined
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		// DISABLED - total bummer when testing, gets in the way
		// "noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"useUnknownInCatchVariables": false,
	},
	"include": [
		"./**/*.ts",
		"./**/*.mjs",
		"./test/suites/*.test.ts",
	],
	"exclude": [
		"./dummy-ext/**",
		"./node_modules/**",
		"./test_projects/**",
	],
	"watchOptions": {
		"excludeDirectories": [
			"dist",
			"dummy-ext",
			"node_modules",
			"out",
			"test_projects",
		]
	}
}
