{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2019",
		"lib": [
			"ESNext", "DOM"
		],
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"rootDir": "src",
		"outDir": "out",
		"baseUrl": ".",
		"esModuleInterop": true
	},
	"parseOptions": {
		"project": "tsconfig.json",
		"tsconfigRootDir": "."
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dist",
		"node_modules",
		"out"
	]
}
