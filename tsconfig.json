{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2019",
		"lib": [
			"ES2019"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src"
	},
	"parseOptions": {
		"project": "tsconfig.json",
		"tsconfigRootDir": "."
	},
	"include": [
		"src/**/*.ts",
		"src/*.ts",
		"src/*/*.ts",
		"src/*/*/*.ts",
		"src/*/*/*/*.ts",
		"src/*/*/*/*/*.ts"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}
