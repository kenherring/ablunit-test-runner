{
	"compilerOptions": {
		"module": "NodeNExt",
		"moduleResolution": "NodeNext", // https://www.typescriptlang.org/tsconfig#moduleResolution
		"target": "ES2020",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		// "listEmittedFiles": true,

		"allowJs": true,
		"checkJs": true,

		// "allowSyntheticDefaultImports": true, // enabled by "esModuleInterop"
		// "allowUnreachableCode": false, // editor warning when undefined
		// "allowUnusedLabels": false, // editor warning when undefined
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"useUnknownInCatchVariables": false,
	},
	"include": [
		"./src/**/*.ts",
		// for when glob doesn't work
		"./src/*.ts",
		"./src/*/*.ts",
		"./src/*/*/*.ts"
	],
	"exclude": [
		"dist",
		"dummy-ext",
		"node_modules",
		"out",
		"test_projects",
	],
	"watchOptions": {
		"excludeDirectories": [
			"dist",
			"dummy-ext",
			"**/node_modeules",
			"out",
			"test_projects"
		]
	}
}
