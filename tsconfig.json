{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext", // https://www.typescriptlang.org/tsconfig#moduleResolution
		"target": "ES2020",
		"lib": [
			"ES2020",
			"WebWorker"
		],

		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [ "src/*" ]
		},
		// "rootDir": ".",
		// "sourceRoot": "src",
		"inlineSourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"listEmittedFiles": true,
		// "traceResolution": true,
		// "types": [
		// 	// "mocha",
		// 	// "vscode",
		// 	"node"
		// ],

		"allowJs": true,
		// "checkJs": true,

		// "allowSyntheticDefaultImports": true, // enabled by "esModuleInterop"
		// "allowUnreachableCode": false, // editor warning when undefined
		// "allowUnusedLabels": false, // editor warning when undefined
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		// see eslint rule - @typescript-eslint/no-unused-vars
		// "noUnusedLocals": true,
		// "noUnusedParameters": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"useUnknownInCatchVariables": true,
	},
	"include": [
		"./**/*.ts",
		"./**/*.mjs",
		"./test/suites/*.test.ts",
		"./esbuild.js",
		"./esbuild.config.mjs",
		"./eslint.config.mjs",
		"./.vscode-test.mjs",
	],
	"exclude": [
		"./dummy-ext/**",
		"./node_modules/**",
		"./test_projects/**",
	],
	"watchOptions": {
		"excludeDirectories": [
			"dummy-ext",
			"node_modules",
			"test_projects",
		]
	}
}
