{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"lib": [
			"ES2021"
		],
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"plugins": [
			{
				"name": "typescript-tslint-plugin"
			}
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"dummy-ext",
		"node_modules",
		"test_projects",
		".vscode-test"
	]
}
